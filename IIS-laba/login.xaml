<Page x:Class="IIS_laba.login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IIS_laba"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="login">

    <Grid>
        <Label Content="Введіть логін" HorizontalAlignment="Left" Height="29" Margin="289,149,0,0" VerticalAlignment="Top" Width="199"/>
        <TextBox x:Name="log" HorizontalAlignment="Left" Height="23" Margin="289,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199"/>
        <Label Content="Введіть пароль" HorizontalAlignment="Left" Margin="289,206,0,0" VerticalAlignment="Top" Width="199"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="289,237,0,0" VerticalAlignment="Top" Width="199" Height="23"/>
        <Button x:Name="register" Click="register_Click" Content="Реєстрація" HorizontalAlignment="Left" Margin="289,272,0,0" VerticalAlignment="Top" Width="94"/>
        <Button x:Name="enter" Click="enter_Click" Content="Ввійти" HorizontalAlignment="Left" Margin="394,272,0,0" VerticalAlignment="Top" Width="94"/>

    </Grid>
</Page>
